extends layout

block topnav
  li
    a(href='/') Deploy
  li.active
    a(href='/warning') Warning Message

block title
  h1 Dreadnot Warning

block warning

block content
  form(method='post', action='/warning').form-stacked
    fieldset
      div.form-group
        label(for='warning_text') Warning Text
        div.input
          textarea(name='warning_text').input-lg.form-control #{wmsg}
      div.actions
        button(type='submit', name='action', value='save').btn.btn-default Save
        | &nbsp;
        - if (wmsg)
          button(type='submit', name='action', value='clear').btn.btn-danger Clear Warning
        - else
          button(type='submit', name='action', value='clear').btn.btn-danger.disabled Clear Warning
